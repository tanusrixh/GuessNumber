<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="#748d69">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the Number"
        android:layout_centerInParent="true"
        android:textStyle="italic|bold"
        android:textColor="#0c2a31"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25sp"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50sp"
        android:text="Can you guess what the number between 0 to 10 is?"
        android:textSize="25sp"
        android:layout_below="@id/welcome"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editId"
        android:layout_width="348dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:gravity="center"
        android:hint="ENTER A NUMBER BETWEEN 0 - 10"
        android:inputType="numberDecimal" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editId"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="50sp"
            android:backgroundTint="#cfdae4"
            android:onClick="onClick"
            android:text="ENTER GUESS"
            android:textColor="#0c2a31"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="Instructions"
            android:textColor="#0c2a31"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#cfdae4"
            android:layout_marginBottom="25sp"
            />



    </LinearLayout>


</RelativeLayout>